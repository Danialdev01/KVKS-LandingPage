---
const { posts } = Astro.props;

const {title, heroImage, description, pubDate, slug} = posts.frontmatter;

---

<div class="cards max-w-sm p-3">
	<a href={`/aktiviti/${posts.frontmatter.slug}`}>
		<div class="card">
			<div class="card-img">
	
	
				<img src={heroImage} alt="Post Preview" class="card-image-zoom">
			</div>
			<div class="card-text p-3 text-left">
				<p class="date text-sm">{pubDate}</p>
				<h3 class="font-bold text-lg">{title}</h3>
				<p>{description}</p><br>
				<a href={`/aktiviti/${posts.frontmatter.slug}`}><button style="background-color: #131038;" class="text-white text-sm px-1 rounded-sm">Lihat</button></a>
			</div>
		</div>
	</a>
</div>
